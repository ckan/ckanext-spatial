    xmlns:phys="eml://ecoinformatics.org/physical-2.1.0" 
    xmlns:att="eml://ecoinformatics.org/attribute-2.1.0" 
    xmlns:ent="eml://ecoinformatics.org/entity-2.1.0" 
    xmlns:res="eml://ecoinformatics.org/resource-2.1.0" 
    xmlns:con="eml://ecoinformatics.org/constraint-2.1.0" 
    xmlns:doc="eml://ecoinformatics.org/documentation-2.1.0" 
    targetNamespace="eml://ecoinformatics.org/view-2.1.0">
